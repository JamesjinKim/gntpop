<%# 개별 알림 표시 컴포넌트 %>
<%# notification: { type:, message:, time: } %>
<%
  # 알림 유형별 아이콘 배경색 결정
  icon_class = case notification[:type]
    when "success" then "bg-gradient-to-br from-emerald-400 to-teal-500"
    when "warning" then "bg-gradient-to-br from-amber-400 to-orange-500"
    when "info" then "bg-gradient-to-br from-sky-400 to-blue-500"
    else "bg-gradient-to-br from-slate-400 to-slate-500"
  end
%>
<div class="flex items-start space-x-3 p-3 bg-slate-50/50 rounded-xl border border-slate-100 hover:border-slate-200 hover:bg-slate-50 transition-all">
  <div class="flex-shrink-0">
    <div class="w-9 h-9 <%= icon_class %> rounded-xl flex items-center justify-center shadow-sm">
      <% case notification[:type] %>
      <% when "success" %>
        <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
        </svg>
      <% when "warning" %>
        <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
        </svg>
      <% when "info" %>
        <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
      <% else %>
        <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
      <% end %>
    </div>
  </div>
  <div class="flex-1 min-w-0">
    <p class="text-sm font-medium text-slate-800"><%= notification[:message] %></p>
    <p class="text-xs text-slate-400 mt-0.5"><%= notification[:time] %></p>
  </div>
</div>
