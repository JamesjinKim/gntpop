<%# 개별 설비 상태 표시 컴포넌트 %>
<%# equipment: { name:, status:, time: } %>
<%
  # 상태별 스타일 클래스 결정
  card_class = case equipment[:status]
    when "run" then "border-emerald-200 bg-emerald-50/50"
    when "idle" then "border-slate-200 bg-slate-50/50"
    when "pm" then "border-amber-200 bg-amber-50/50"
    else "border-red-200 bg-red-50/50"
  end

  dot_class = case equipment[:status]
    when "run" then "bg-emerald-500"
    when "idle" then "bg-slate-400"
    when "pm" then "bg-amber-500"
    else "bg-gnt-red"
  end

  text_class = case equipment[:status]
    when "run" then "text-emerald-700"
    when "idle" then "text-slate-500"
    when "pm" then "text-amber-700"
    else "text-gnt-red"
  end
%>
<div class="p-3 rounded-xl border transition-all hover:shadow-sm <%= card_class %>">
  <div class="flex items-center justify-between mb-1">
    <span class="text-xs font-medium text-slate-700"><%= equipment[:name] %></span>
    <span class="w-2 h-2 rounded-full <%= dot_class %>"></span>
  </div>
  <div class="text-xs font-medium <%= text_class %>">
    <%= equipment[:time] %>
  </div>
</div>
