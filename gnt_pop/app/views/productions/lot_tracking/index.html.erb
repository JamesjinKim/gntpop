<div class="max-w-4xl mx-auto">
  <!-- 페이지 헤더 -->
  <div class="mb-6">
    <h1 class="text-2xl font-bold text-gray-900">LOT 추적</h1>
    <p class="mt-1 text-sm text-gray-500">LOT 번호로 생산 이력을 조회합니다.</p>
  </div>

  <!-- 검색 폼 -->
  <div class="bg-white shadow rounded-lg p-6 mb-6">
    <%= form_tag productions_lot_tracking_index_path, method: :get, class: "flex gap-3" do %>
      <div class="flex-1">
        <%= text_field_tag :lot_no, params[:lot_no],
              placeholder: "LOT 번호를 입력하세요 (예: L-20260211-CVT-001-001)",
              class: "block w-full rounded-lg border-gray-300 shadow-sm focus:border-gnt-red focus:ring-gnt-red text-lg py-3 px-4",
              autofocus: true %>
      </div>
      <button type="submit" class="inline-flex items-center px-6 py-3 bg-gnt-red text-white font-medium rounded-lg hover:bg-red-700 transition-colors min-w-[80px] justify-center">
        <svg class="w-5 h-5 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
        </svg>
        검색
      </button>
    <% end %>
  </div>

  <!-- 미발견 메시지 -->
  <% if @not_found %>
    <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4 mb-6">
      <div class="flex items-center">
        <svg class="w-5 h-5 text-yellow-600 mr-3 flex-shrink-0" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
        </svg>
        <p class="text-yellow-800">
          "<strong><%= @lot_no %></strong>" 에 해당하는 LOT을 찾을 수 없습니다.
        </p>
      </div>
    </div>
  <% end %>

  <!-- 최근 생산 LOT 목록 -->
  <div class="bg-white shadow rounded-lg overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-lg font-semibold text-gray-900">최근 생산 LOT</h2>
    </div>

    <% if @recent_results.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">LOT 번호</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">제품</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">공정</th>
              <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">양품</th>
              <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">불량</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">등록일시</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @recent_results.each do |result| %>
              <tr class="hover:bg-gray-50 cursor-pointer" onclick="window.location='<%= productions_lot_tracking_path(lot_no: result.lot_no) %>'">
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="text-sm font-mono font-medium text-gnt-red"><%= result.lot_no %></span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= result.work_order&.product&.product_name || "-" %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= result.manufacturing_process&.process_name || "-" %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-right text-gray-900">
                  <%= number_with_delimiter(result.good_qty) %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-right">
                  <span class="<%= result.defect_qty.positive? ? 'text-red-600 font-medium' : 'text-gray-500' %>">
                    <%= number_with_delimiter(result.defect_qty) %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= result.created_at.strftime("%Y-%m-%d %H:%M") %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="px-6 py-12 text-center">
        <svg class="mx-auto h-12 w-12 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
        </svg>
        <p class="mt-2 text-sm text-gray-500">생산실적 데이터가 없습니다.</p>
      </div>
    <% end %>
  </div>
</div>
