<%# 공정 등록/수정 폼 %>
<%= form_with(
  model: manufacturing_process,
  url: manufacturing_process.persisted? ? masters_manufacturing_process_path(manufacturing_process) : masters_manufacturing_processes_path,
  class: "space-y-6"
) do |f| %>

  <%# 에러 메시지 표시 %>
  <% if manufacturing_process.errors.any? %>
    <div class="rounded-md bg-red-50 p-4">
      <div class="flex">
        <div class="shrink-0">
          <svg class="size-5 text-red-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">입력 내용을 확인해주세요</h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% manufacturing_process.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <%# 공정코드 %>
  <div>
    <%= f.label :process_code, "공정코드", class: "form-label" %>
    <%= f.text_field :process_code,
        class: "form-input",
        placeholder: "P010",
        required: true,
        autofocus: true %>
    <p class="mt-1 text-sm text-gray-500">고유한 공정 코드를 입력하세요 (예: P010)</p>
  </div>

  <%# 공정명 %>
  <div>
    <%= f.label :process_name, "공정명", class: "form-label" %>
    <%= f.text_field :process_name,
        class: "form-input",
        placeholder: "권선",
        required: true %>
  </div>

  <%# 공정 순서 %>
  <div>
    <%= f.label :process_order, "공정 순서", class: "form-label" %>
    <%= f.number_field :process_order,
        class: "form-input",
        min: 1,
        step: 1,
        placeholder: "10",
        required: true %>
    <p class="mt-1 text-sm text-gray-500">공정의 진행 순서 (10, 20, 30 ... 단위로 입력 권장)</p>
  </div>

  <%# 표준 사이클타임 %>
  <div>
    <%= f.label :std_cycle_time, "표준 사이클타임 (초)", class: "form-label" %>
    <%= f.number_field :std_cycle_time,
        class: "form-input",
        min: 0,
        step: 0.1,
        placeholder: "60.0" %>
    <p class="mt-1 text-sm text-gray-500">1개 생산 시 표준 소요 시간 (초 단위, 선택사항)</p>
  </div>

  <%# 활성 여부 %>
  <div class="flex items-center">
    <div class="flex h-6 items-center">
      <%= f.check_box :is_active,
          class: "size-4 rounded border-gray-300 text-gnt-red focus:ring-gnt-red",
          checked: manufacturing_process.is_active.nil? ? true : manufacturing_process.is_active %>
    </div>
    <div class="ml-3">
      <%= f.label :is_active, "활성", class: "text-sm font-medium text-gray-900" %>
      <p class="text-sm text-gray-500">비활성 시 생산실적 입력 등에서 선택할 수 없습니다</p>
    </div>
  </div>

  <%# 버튼 영역 %>
  <div class="flex justify-end gap-3 pt-4 border-t border-gray-200">
    <%= link_to "취소", masters_manufacturing_processes_path, class: "btn btn-outline" %>
    <%= f.submit manufacturing_process.persisted? ? "수정" : "등록", class: "btn btn-primary" %>
  </div>
<% end %>
