<%# 제품 등록/수정 폼 %>
<%= form_with(
  model: product,
  url: product.persisted? ? masters_product_path(product) : masters_products_path,
  class: "space-y-6"
) do |f| %>

  <%# 에러 메시지 표시 %>
  <% if product.errors.any? %>
    <div class="rounded-md bg-red-50 p-4">
      <div class="flex">
        <div class="shrink-0">
          <svg class="size-5 text-red-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">입력 내용을 확인해주세요</h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% product.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <%# 제품코드 %>
  <div>
    <%= f.label :product_code, "제품코드", class: "form-label" %>
    <%= f.text_field :product_code,
        class: "form-input",
        placeholder: "CVT-001",
        required: true,
        autofocus: true %>
    <p class="mt-1 text-sm text-gray-500">고유한 제품 코드를 입력하세요 (예: CVT-001)</p>
  </div>

  <%# 제품명 %>
  <div>
    <%= f.label :product_name, "제품명", class: "form-label" %>
    <%= f.text_field :product_name,
        class: "form-input",
        placeholder: "DC/DC 컨버터 24V",
        required: true %>
  </div>

  <%# 제품군 %>
  <div>
    <%= f.label :product_group, "제품군", class: "form-label" %>
    <%= f.select :product_group,
        Product.product_groups.keys.map { |k| [Product.new(product_group: k).product_group_i18n, k] },
        { include_blank: "선택하세요" },
        class: "form-input",
        required: true %>
  </div>

  <%# 사양 %>
  <div>
    <%= f.label :spec, "사양", class: "form-label" %>
    <%= f.text_area :spec,
        class: "form-input",
        rows: 3,
        placeholder: "제품의 상세 사양을 입력하세요" %>
    <p class="mt-1 text-sm text-gray-500">입력 전압, 출력 전압, 용량 등 제품의 상세 사양</p>
  </div>

  <%# 단위 %>
  <div>
    <%= f.label :unit, "단위", class: "form-label" %>
    <%= f.text_field :unit,
        class: "form-input",
        value: product.unit || "EA",
        placeholder: "EA" %>
    <p class="mt-1 text-sm text-gray-500">생산 수량 단위 (기본값: EA)</p>
  </div>

  <%# 활성 여부 %>
  <div class="flex items-center">
    <div class="flex h-6 items-center">
      <%= f.check_box :is_active,
          class: "size-4 rounded border-gray-300 text-gnt-red focus:ring-gnt-red",
          checked: product.is_active.nil? ? true : product.is_active %>
    </div>
    <div class="ml-3">
      <%= f.label :is_active, "활성", class: "text-sm font-medium text-gray-900" %>
      <p class="text-sm text-gray-500">비활성 시 작업지시 등록에서 선택할 수 없습니다</p>
    </div>
  </div>

  <%# 버튼 영역 %>
  <div class="flex justify-end gap-3 pt-4 border-t border-gray-200">
    <%= link_to "취소", masters_products_path, class: "btn btn-outline" %>
    <%= f.submit product.persisted? ? "수정" : "등록", class: "btn btn-primary" %>
  </div>
<% end %>
