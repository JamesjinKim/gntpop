<%# 불량코드 등록/수정 폼 %>
<%= form_with(
  model: defect_code,
  url: defect_code.persisted? ? masters_defect_code_path(defect_code) : masters_defect_codes_path,
  class: "space-y-6"
) do |f| %>

  <%# 에러 메시지 표시 %>
  <% if defect_code.errors.any? %>
    <div class="rounded-md bg-red-50 p-4">
      <div class="flex">
        <div class="shrink-0">
          <svg class="size-5 text-red-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">입력 내용을 확인해주세요</h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% defect_code.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <%# 불량코드 %>
  <div>
    <%= f.label :code, "불량코드", class: "form-label" %>
    <%= f.text_field :code,
        class: "form-input",
        placeholder: "D01",
        required: true,
        autofocus: true %>
    <p class="mt-1 text-sm text-gray-500">고유한 불량 코드를 입력하세요 (예: D01)</p>
  </div>

  <%# 불량명 %>
  <div>
    <%= f.label :name, "불량명", class: "form-label" %>
    <%= f.text_field :name,
        class: "form-input",
        placeholder: "권선 불량",
        required: true %>
  </div>

  <%# 설명 %>
  <div>
    <%= f.label :description, "설명", class: "form-label" %>
    <%= f.text_area :description,
        class: "form-input",
        rows: 4,
        placeholder: "불량의 상세 설명을 입력하세요" %>
    <p class="mt-1 text-sm text-gray-500">불량의 원인, 증상, 조치 방법 등을 상세히 기록</p>
  </div>

  <%# 활성 여부 %>
  <div class="flex items-center">
    <div class="flex h-6 items-center">
      <%= f.check_box :is_active,
          class: "size-4 rounded border-gray-300 text-gnt-red focus:ring-gnt-red",
          checked: defect_code.is_active.nil? ? true : defect_code.is_active %>
    </div>
    <div class="ml-3">
      <%= f.label :is_active, "활성", class: "text-sm font-medium text-gray-900" %>
      <p class="text-sm text-gray-500">비활성 시 불량 입력 등에서 선택할 수 없습니다</p>
    </div>
  </div>

  <%# 버튼 영역 %>
  <div class="flex justify-end gap-3 pt-4 border-t border-gray-200">
    <%= link_to "취소", masters_defect_codes_path, class: "btn btn-outline" %>
    <%= f.submit defect_code.persisted? ? "수정" : "등록", class: "btn btn-primary" %>
  </div>
<% end %>
