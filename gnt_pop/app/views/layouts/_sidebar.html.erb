<!-- 사이드바 네비게이션 -->
<aside class="fixed top-16 left-0 z-40 w-64 h-[calc(100vh-4rem)] transition-transform -translate-x-full lg:translate-x-0 bg-gnt-black"
       data-mobile-menu-target="sidebar"
       id="sidebar">
  <div class="h-full px-3 py-4 overflow-y-auto">
    <nav class="space-y-2">
      <!-- 대시보드 -->
      <%= link_to root_path,
                  class: "flex items-center p-3 text-gray-300 rounded-lg hover:bg-gray-800 hover:text-white group transition-colors #{current_page?(root_path) ? 'bg-gray-800 text-white' : ''}" do %>
        <svg class="w-5 h-5 text-gray-400 group-hover:text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
        </svg>
        <span class="ml-3 font-medium">대시보드</span>
      <% end %>

      <!-- 생산관리 섹션 -->
      <div class="pt-4">
        <p class="px-3 text-xs font-semibold text-gray-500 uppercase tracking-wider">생산관리</p>
        <div class="mt-2 space-y-1">
          <%= link_to productions_work_orders_path,
                      class: "flex items-center p-3 text-gray-300 rounded-lg hover:bg-gray-800 hover:text-white group transition-colors #{request.path.start_with?('/productions/work_orders') ? 'bg-gray-800 text-white' : ''}" do %>
            <svg class="w-5 h-5 text-gray-400 group-hover:text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
            </svg>
            <span class="ml-3">작업지시</span>
          <% end %>

          <%= link_to productions_production_results_path,
                      class: "flex items-center p-3 text-gray-300 rounded-lg hover:bg-gray-800 hover:text-white group transition-colors #{request.path.start_with?('/productions/production_results') ? 'bg-gray-800 text-white' : ''}" do %>
            <svg class="w-5 h-5 text-gray-400 group-hover:text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 3.055A9.001 9.001 0 1020.945 13H11V3.055z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.488 9H15V3.512A9.025 9.025 0 0120.488 9z" />
            </svg>
            <span class="ml-3">생산실적</span>
          <% end %>

          <%= link_to productions_lot_tracking_index_path,
                      class: "flex items-center p-3 text-gray-300 rounded-lg hover:bg-gray-800 hover:text-white group transition-colors #{request.path.start_with?('/productions/lot_tracking') ? 'bg-gray-800 text-white' : ''}" do %>
            <svg class="w-5 h-5 text-gray-400 group-hover:text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
            </svg>
            <span class="ml-3">LOT 추적</span>
          <% end %>
        </div>
      </div>

      <!-- 품질관리 섹션 -->
      <div class="pt-4">
        <p class="px-3 text-xs font-semibold text-gray-500 uppercase tracking-wider">품질관리</p>
        <div class="mt-2 space-y-1">
          <%= link_to quality_inspections_path,
                      class: "flex items-center p-3 text-gray-300 rounded-lg hover:bg-gray-800 hover:text-white group transition-colors #{request.path.start_with?('/quality/inspections') ? 'bg-gray-800 text-white' : ''}" do %>
            <svg class="w-5 h-5 text-gray-400 group-hover:text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span class="ml-3">검사결과</span>
          <% end %>

          <%= link_to quality_defect_analysis_path,
                      class: "flex items-center p-3 text-gray-300 rounded-lg hover:bg-gray-800 hover:text-white group transition-colors #{request.path.start_with?('/quality/defect_analysis') ? 'bg-gray-800 text-white' : ''}" do %>
            <svg class="w-5 h-5 text-gray-400 group-hover:text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
            </svg>
            <span class="ml-3">불량분석</span>
          <% end %>

          <%= link_to quality_spc_path,
                      class: "flex items-center p-3 text-gray-300 rounded-lg hover:bg-gray-800 hover:text-white group transition-colors #{request.path.start_with?('/quality/spc') ? 'bg-gray-800 text-white' : ''}" do %>
            <svg class="w-5 h-5 text-gray-400 group-hover:text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 8v8m-4-5v5m-4-2v2m-2 4h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            <span class="ml-3">SPC</span>
          <% end %>
        </div>
      </div>

      <!-- 모니터링 섹션 -->
      <div class="pt-4">
        <p class="px-3 text-xs font-semibold text-gray-500 uppercase tracking-wider">모니터링</p>
        <div class="mt-2 space-y-1">
          <%= link_to monitoring_production_board_path,
                      class: "flex items-center p-3 text-gray-300 rounded-lg hover:bg-gray-800 hover:text-white group transition-colors #{request.path.start_with?('/monitoring/production_board') ? 'bg-gray-800 text-white' : ''}" do %>
            <svg class="w-5 h-5 text-gray-400 group-hover:text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            <span class="ml-3">생산현황판</span>
          <% end %>

          <%= link_to monitoring_equipment_status_index_path,
                      class: "flex items-center p-3 text-gray-300 rounded-lg hover:bg-gray-800 hover:text-white group transition-colors #{request.path.start_with?('/monitoring/equipment_status') ? 'bg-gray-800 text-white' : ''}" do %>
            <svg class="w-5 h-5 text-gray-400 group-hover:text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <span class="ml-3">설비상태</span>
          <% end %>
        </div>
      </div>

      <!-- 기준정보 섹션 (관리자용) -->
      <div class="pt-4">
        <p class="px-3 text-xs font-semibold text-gray-500 uppercase tracking-wider">기준정보</p>
        <div class="mt-2 space-y-1">
          <%= link_to masters_products_path,
                      class: "flex items-center p-3 text-gray-300 rounded-lg hover:bg-gray-800 hover:text-white group transition-colors #{request.path.start_with?('/masters/products') ? 'bg-gray-800 text-white' : ''}" do %>
            <svg class="w-5 h-5 text-gray-400 group-hover:text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
            </svg>
            <span class="ml-3">제품 마스터</span>
          <% end %>

          <%= link_to masters_manufacturing_processes_path,
                      class: "flex items-center p-3 text-gray-300 rounded-lg hover:bg-gray-800 hover:text-white group transition-colors #{request.path.start_with?('/masters/manufacturing_processes') ? 'bg-gray-800 text-white' : ''}" do %>
            <svg class="w-5 h-5 text-gray-400 group-hover:text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
            </svg>
            <span class="ml-3">공정 마스터</span>
          <% end %>

          <%= link_to masters_equipments_path,
                      class: "flex items-center p-3 text-gray-300 rounded-lg hover:bg-gray-800 hover:text-white group transition-colors #{request.path.start_with?('/masters/equipments') ? 'bg-gray-800 text-white' : ''}" do %>
            <svg class="w-5 h-5 text-gray-400 group-hover:text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z" />
            </svg>
            <span class="ml-3">설비 마스터</span>
          <% end %>

          <%= link_to masters_workers_path,
                      class: "flex items-center p-3 text-gray-300 rounded-lg hover:bg-gray-800 hover:text-white group transition-colors #{request.path.start_with?('/masters/workers') ? 'bg-gray-800 text-white' : ''}" do %>
            <svg class="w-5 h-5 text-gray-400 group-hover:text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
            <span class="ml-3">작업자 마스터</span>
          <% end %>

          <%= link_to masters_defect_codes_path,
                      class: "flex items-center p-3 text-gray-300 rounded-lg hover:bg-gray-800 hover:text-white group transition-colors #{request.path.start_with?('/masters/defect_codes') ? 'bg-gray-800 text-white' : ''}" do %>
            <svg class="w-5 h-5 text-gray-400 group-hover:text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
            <span class="ml-3">불량코드</span>
          <% end %>
        </div>
      </div>
    </nav>
  </div>
</aside>

<!-- 모바일 오버레이 -->
<div class="fixed inset-0 z-30 bg-gray-600 bg-opacity-75 lg:hidden hidden"
     data-mobile-menu-target="overlay"
     data-action="click->mobile-menu#close"></div>
