<% content_for(:title) { "생산현황판 | GnT POP" } %>

<div class="space-y-6">
  <%# KPI 요약 카드 4종 %>
  <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-4">
    <%# 금일 생산량 %>
    <div class="bg-slate-800 rounded-2xl border border-slate-700 p-6">
      <div class="flex items-center justify-between mb-4">
        <div class="w-11 h-11 rounded-xl bg-gradient-to-br from-rose-900 to-red-800 flex items-center justify-center">
          <svg class="h-5 w-5 text-gnt-red" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
          </svg>
        </div>
        <span class="text-xs font-medium text-slate-500 bg-slate-700 px-2.5 py-1 rounded-full">TODAY</span>
      </div>
      <p class="text-sm font-medium text-slate-400">금일 생산량</p>
      <div class="flex items-baseline mt-1">
        <span class="text-4xl font-bold text-white"><%= number_with_delimiter(@kpi[:production][:actual]) %></span>
        <span class="ml-2 text-sm text-slate-500">/ <%= number_with_delimiter(@kpi[:production][:target]) %> EA</span>
      </div>
      <div class="mt-4">
        <div class="flex items-center justify-between text-xs text-slate-500 mb-1.5">
          <span>달성률</span>
          <span class="font-semibold text-gnt-red"><%= @kpi[:production][:rate] %>%</span>
        </div>
        <div class="w-full bg-slate-700 rounded-full h-2">
          <div class="bg-gradient-to-r from-gnt-red to-rose-400 rounded-full h-2 transition-all duration-500" style="width: <%= [@kpi[:production][:rate], 100].min %>%"></div>
        </div>
      </div>
    </div>

    <%# 달성률 %>
    <div class="bg-slate-800 rounded-2xl border border-slate-700 p-6">
      <div class="flex items-center justify-between mb-4">
        <div class="w-11 h-11 rounded-xl bg-gradient-to-br from-emerald-900 to-emerald-800 flex items-center justify-center">
          <svg class="h-5 w-5 text-emerald-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <%
          rate_badge_class = if @kpi[:production][:rate] >= 80
            "text-emerald-400 bg-emerald-900/50"
          elsif @kpi[:production][:rate] >= 50
            "text-amber-400 bg-amber-900/50"
          else
            "text-red-400 bg-red-900/50"
          end
        %>
        <span class="text-xs font-medium px-2.5 py-1 rounded-full <%= rate_badge_class %>">
          <%= @kpi[:production][:rate] >= 80 ? "양호" : @kpi[:production][:rate] >= 50 ? "주의" : "경고" %>
        </span>
      </div>
      <p class="text-sm font-medium text-slate-400">달성률</p>
      <div class="flex items-baseline mt-1">
        <span class="text-4xl font-bold text-white"><%= @kpi[:production][:rate] %></span>
        <span class="ml-1 text-xl text-slate-500">%</span>
      </div>
      <div class="mt-4 text-xs text-slate-500">
        목표 대비 실적 비율
      </div>
    </div>

    <%# 불량률 %>
    <div class="bg-slate-800 rounded-2xl border border-slate-700 p-6">
      <div class="flex items-center justify-between mb-4">
        <div class="w-11 h-11 rounded-xl bg-gradient-to-br from-sky-900 to-cyan-800 flex items-center justify-center">
          <svg class="h-5 w-5 text-sky-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
          </svg>
        </div>
        <%
          defect_badge_class = if @kpi[:defect][:rate] <= @kpi[:defect][:target]
            "text-emerald-400 bg-emerald-900/50"
          else
            "text-red-400 bg-red-900/50"
          end
        %>
        <span class="text-xs font-medium px-2.5 py-1 rounded-full <%= defect_badge_class %>">
          목표 <%= @kpi[:defect][:target] %>%
        </span>
      </div>
      <p class="text-sm font-medium text-slate-400">불량률</p>
      <div class="flex items-baseline mt-1">
        <span class="text-4xl font-bold text-white"><%= @kpi[:defect][:rate] %></span>
        <span class="ml-1 text-xl text-slate-500">%</span>
      </div>
      <div class="mt-4 flex items-center space-x-4 text-xs text-slate-500">
        <div class="flex items-center">
          <span class="w-2 h-2 bg-sky-500 rounded-full mr-1.5"></span>
          <span>양품 <%= number_with_delimiter(@kpi[:defect][:good_count]) %></span>
        </div>
        <div class="flex items-center">
          <span class="w-2 h-2 bg-gnt-red rounded-full mr-1.5"></span>
          <span>불량 <%= @kpi[:defect][:defect_count] %></span>
        </div>
      </div>
    </div>

    <%# 설비가동률 %>
    <div class="bg-slate-800 rounded-2xl border border-slate-700 p-6">
      <div class="flex items-center justify-between mb-4">
        <div class="w-11 h-11 rounded-xl bg-gradient-to-br from-violet-900 to-purple-800 flex items-center justify-center">
          <svg class="h-5 w-5 text-violet-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z" />
          </svg>
        </div>
        <span class="text-xs font-medium text-slate-400 bg-slate-700 px-2.5 py-1 rounded-full flex items-center">
          <span class="w-1.5 h-1.5 mr-1.5 bg-emerald-500 rounded-full animate-pulse"></span>
          LIVE
        </span>
      </div>
      <p class="text-sm font-medium text-slate-400">설비 가동률</p>
      <div class="flex items-baseline mt-1">
        <span class="text-4xl font-bold text-white"><%= @kpi[:equipment][:rate] %></span>
        <span class="ml-1 text-xl text-slate-500">%</span>
      </div>
      <div class="mt-4 flex items-center space-x-3 text-xs">
        <div class="flex items-center">
          <span class="w-2.5 h-2.5 bg-emerald-500 rounded-full mr-1"></span>
          <span class="text-slate-400"><%= @kpi[:equipment][:running] %></span>
        </div>
        <div class="flex items-center">
          <span class="w-2.5 h-2.5 bg-slate-400 rounded-full mr-1"></span>
          <span class="text-slate-400"><%= @kpi[:equipment][:idle] %></span>
        </div>
        <div class="flex items-center">
          <span class="w-2.5 h-2.5 bg-gnt-red rounded-full mr-1"></span>
          <span class="text-slate-400"><%= @kpi[:equipment][:error] %></span>
        </div>
        <div class="flex items-center">
          <span class="w-2.5 h-2.5 bg-amber-400 rounded-full mr-1"></span>
          <span class="text-slate-400"><%= @kpi[:equipment][:pm] %></span>
        </div>
      </div>
    </div>
  </div>

  <%# 공정별 현황 + 최근 실적 %>
  <div class="grid grid-cols-1 gap-6 lg:grid-cols-3">
    <%# 공정별 진행 현황 (좌측 2/3) %>
    <div class="lg:col-span-2 bg-slate-800 rounded-2xl border border-slate-700 p-6">
      <h2 class="text-lg font-semibold text-white mb-6">공정별 진행 현황</h2>
      <div class="space-y-5">
        <% @processes.each do |process| %>
          <%
            status_dot = case process[:status]
            when "running" then "bg-emerald-500 animate-pulse"
            else "bg-slate-500"
            end

            progress_color = if process[:progress] >= 80
              "text-emerald-400"
            elsif process[:progress] >= 50
              "text-amber-400"
            else
              "text-gnt-red"
            end

            bar_color = if process[:progress] >= 80
              "bg-gradient-to-r from-emerald-400 to-teal-500"
            elsif process[:progress] >= 50
              "bg-gradient-to-r from-amber-400 to-orange-400"
            else
              "bg-gradient-to-r from-gnt-red to-rose-400"
            end
          %>
          <div>
            <div class="flex items-center justify-between mb-2">
              <div class="flex items-center space-x-3">
                <span class="w-2.5 h-2.5 rounded-full <%= status_dot %>"></span>
                <span class="font-medium text-slate-200 text-sm"><%= process[:name] %></span>
              </div>
              <div class="flex items-center space-x-4 text-sm">
                <span class="text-slate-500"><%= process[:actual] %> / <%= process[:target] %></span>
                <span class="font-semibold w-12 text-right <%= progress_color %>"><%= process[:progress] %>%</span>
              </div>
            </div>
            <div class="w-full bg-slate-700 rounded-full h-3 overflow-hidden">
              <div class="h-3 rounded-full transition-all duration-500 <%= bar_color %>" style="width: <%= [process[:progress], 100].min %>%"></div>
            </div>
          </div>
        <% end %>

        <% if @processes.empty? %>
          <p class="text-center text-slate-500 py-8">등록된 공정 데이터가 없습니다</p>
        <% end %>
      </div>
    </div>

    <%# 최근 생산실적 피드 (우측 1/3) %>
    <div class="bg-slate-800 rounded-2xl border border-slate-700 p-6">
      <h2 class="text-lg font-semibold text-white mb-6">최근 생산실적</h2>
      <div class="space-y-3">
        <% @recent_results.each do |result| %>
          <div class="flex items-center justify-between p-3 bg-slate-700/50 rounded-xl">
            <div>
              <p class="text-sm font-medium text-slate-200"><%= result[:wo] %></p>
              <p class="text-xs text-slate-400"><%= result[:process] %></p>
            </div>
            <div class="text-right">
              <p class="text-sm font-semibold text-white"><%= result[:qty] %> EA</p>
              <p class="text-xs text-slate-500"><%= result[:time] %></p>
            </div>
          </div>
        <% end %>

        <% if @recent_results.empty? %>
          <p class="text-center text-slate-500 py-8">최근 생산실적이 없습니다</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
